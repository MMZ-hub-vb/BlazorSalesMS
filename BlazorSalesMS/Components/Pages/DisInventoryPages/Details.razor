@page "/disinventories/details"
@using Microsoft.EntityFrameworkCore
@using BlazorSalesMS.Data
@inject IDbContextFactory<BlazorSalesMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>DisInventory</h2>
    <hr />
    @if (disinventory is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">PId</dt>
            <dd class="col-sm-10">@disinventory.PId</dd>
            <dt class="col-sm-2">DistributorName</dt>
            <dd class="col-sm-10">@disinventory.DistributorName</dd>
            <dt class="col-sm-2">ItemName</dt>
            <dd class="col-sm-10">@disinventory.ItemName</dd>
            <dt class="col-sm-2">SKU</dt>
            <dd class="col-sm-10">@disinventory.SKU</dd>
            <dt class="col-sm-2">SalesSystem</dt>
            <dd class="col-sm-10">@disinventory.SalesSystem</dd>
            <dt class="col-sm-2">QuantityOH</dt>
            <dd class="col-sm-10">@disinventory.QuantityOH</dd>
            <dt class="col-sm-2">Unit</dt>
            <dd class="col-sm-10">@disinventory.Unit</dd>
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@disinventory.Category</dd>
            <dt class="col-sm-2">buingPrice</dt>
            <dd class="col-sm-10">@disinventory.buingPrice</dd>
            <dt class="col-sm-2">SalesPrice</dt>
            <dd class="col-sm-10">@disinventory.SalesPrice</dd>
            <dt class="col-sm-2">RecepitDate</dt>
            <dd class="col-sm-10">@disinventory.RecepitDate</dd>
            <dt class="col-sm-2">LastUpdateQtyDate</dt>
            <dd class="col-sm-10">@disinventory.LastUpdateQtyDate</dd>
            <dt class="col-sm-2">ExpirationDate</dt>
            <dd class="col-sm-10">@disinventory.ExpirationDate</dd>
        </dl>
        <div>
            <a href="@($"/disinventories/edit?id={disinventory.Id}")">Edit</a> |
            <a href="@($"/disinventories")">Back to List</a>
        </div>
    }
</div>

@code {
    private DisInventory? disinventory;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        disinventory = await context.DisInventories.FirstOrDefaultAsync(m => m.Id == Id);

        if (disinventory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
