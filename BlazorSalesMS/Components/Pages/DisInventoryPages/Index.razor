@page "/disinventories"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using BlazorSalesMS.Data

@implements IAsyncDisposable
@inject IDbContextFactory<BlazorSalesMS.Data.ApplicationDbContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Distributor Inventory</h1>



<QuickGrid Class="table table-striped custom-quickgrid" Items="context.DisInventories">
    <PropertyColumn Property="disinventory => disinventory.DistributorId" Title="ID" />
    <PropertyColumn Property="disinventory => disinventory.DistributorName" />
    <PropertyColumn Property="disinventory => disinventory.ItemName" />
    <PropertyColumn Property="disinventory => disinventory.SKU" />
    <PropertyColumn Property="disinventory => disinventory.QuantityOH" />
    <PropertyColumn Property="disinventory => disinventory.Unit" />
    <PropertyColumn Property="disinventory => disinventory.SalesPrice" />
 
    <PropertyColumn Property="disinventory => disinventory.OrderDate" />

    <TemplateColumn Context="disinventory">
        <a  class="btn btn-info" href="@($"disinventories/details?id={disinventory.Id}")">Details</a> |
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
