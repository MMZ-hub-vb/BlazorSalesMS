@page "/inventories/details"
@using Microsoft.EntityFrameworkCore
@using BlazorSalesMS.Data
@inject IDbContextFactory<BlazorSalesMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Inventory</h2>
    <hr />
    @if (inventory is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ItemName</dt>
            <dd class="col-sm-10">@inventory.ItemName</dd>
            <dt class="col-sm-2">SKU</dt>
            <dd class="col-sm-10">@inventory.SKU</dd>
            <dt class="col-sm-2">Quantity</dt>
            <dt class="col-sm-2">QuantityOH</dt>
            <dd class="col-sm-10">@inventory.QuantityOH</dd>
            <dt class="col-sm-2">Unit</dt>
            <dd class="col-sm-10">@inventory.Unit</dd>
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@inventory.Category</dd>
            <dt class="col-sm-2">PdnPrice</dt>
            <dd class="col-sm-10">@inventory.PdnPrice</dd>
            <dt class="col-sm-2">SalesPrice</dt>
            <dd class="col-sm-10">@inventory.SalesPrice</dd>
            <dt class="col-sm-2">LastUpdateQtyDate</dt>
            <dd class="col-sm-10">@inventory.LastUpdateQtyDate</dd>
            <dt class="col-sm-2">LastUpdatePriceDate</dt>
            <dt class="col-sm-2">ExpirationDate</dt>
            <dd class="col-sm-10">@inventory.ExpirationDate</dd>
        </dl>
        <div>
            <a href="@($"/inventories/edit?id={inventory.Id}")">Edit</a> |
            <a href="@($"/inventories")">Back to List</a>
        </div>
    }
</div>

@code {
    private Inventory? inventory;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        inventory = await context.Inventories.FirstOrDefaultAsync(m => m.Id == Id);

        if (inventory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
