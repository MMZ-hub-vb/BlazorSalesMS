@page "/inventories/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorSalesMS.Data
@inject IDbContextFactory<BlazorSalesMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Inventory</h2>
    <hr />
    @if (inventory is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ItemName</dt>
            <dd class="col-sm-10">@inventory.ItemName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SKU</dt>
            <dd class="col-sm-10">@inventory.SKU</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Quantity</dt>
            <dd class="col-sm-10">@inventory.Quantity</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">QuantityOH</dt>
            <dd class="col-sm-10">@inventory.QuantityOH</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Unit</dt>
            <dd class="col-sm-10">@inventory.Unit</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@inventory.Category</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PdnPrice</dt>
            <dd class="col-sm-10">@inventory.PdnPrice</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SalesPrice</dt>
            <dd class="col-sm-10">@inventory.SalesPrice</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastUpdateQtyDate</dt>
            <dd class="col-sm-10">@inventory.LastUpdateQtyDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastUpdatePriceDate</dt>
            <dd class="col-sm-10">@inventory.LastUpdatePriceDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ExpirationDate</dt>
            <dd class="col-sm-10">@inventory.ExpirationDate</dd>
        </dl>
        <EditForm method="post" Model="inventory" OnValidSubmit="DeleteInventory" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(inventory is null)">Delete</button> |
            <a href="/inventories">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Inventory? inventory;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        inventory = await context.Inventories.FirstOrDefaultAsync(m => m.Id == Id);

        if (inventory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteInventory()
    {
        using var context = DbFactory.CreateDbContext();
        context.Inventories.Remove(inventory!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/inventories");
    }
}
