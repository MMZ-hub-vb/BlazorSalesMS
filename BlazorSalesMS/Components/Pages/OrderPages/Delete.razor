@page "/orders/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorSalesMS.Data
@inject IDbContextFactory<BlazorSalesMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1 style="color:red">Delete</h1>

<h3 style="color:red">Are you sure you want to delete this?</h3>
@if (IsSpinner)
{
    <div class="spinner-border text-primary" style="margin-left:400px" />
}
<div>
    <h2>Order</h2>
    <hr />
    @if (order is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">DistributorName</dt>
            <dd class="col-sm-10">@order.DistributorName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProductName</dt>
            <dd class="col-sm-10">@order.ProductName</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Quantity</dt>
            <dd class="col-sm-10">@order.Quantity</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">OrderDate</dt>
            <dd class="col-sm-10">@order.OrderDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DistributorId</dt>
            <dd class="col-sm-10">@order.DistributorId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProductId</dt>
            <dd class="col-sm-10">@order.ProductId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">OrderCode</dt>
            <dd class="col-sm-10">@order.OrderCode</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@order.Status</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Unit</dt>
            <dd class="col-sm-10">@order.Unit</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UnitPrice</dt>
            <dd class="col-sm-10">@order.UnitPrice</dd>
        </dl>
        <EditForm method="post" Model="order" OnValidSubmit="DeleteOrder" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(order is null)">Delete</button> |
            <a href="/orders">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Order? order;

    [SupplyParameterFromQuery]
    private int Id { get; set; }
    int Pid;
    int qty;
    bool IsSpinner = false;
    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        order = await context.order.FirstOrDefaultAsync(m => m.Id == Id);
        Pid = order.ProductId;
        qty = order.Quantity;
        if (order is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteOrder()
    {
        IsSpinner = true;
        using var context = DbFactory.CreateDbContext();
        using var context2 = DbFactory.CreateDbContext();
        context.order.Remove(order!);
        await context.SaveChangesAsync();
        await context2.Database.ExecuteSqlRawAsync(
           "UPDATE Inventories SET QuantityOH = QuantityOH + {0} WHERE PId = {1}",
                qty, Pid);
        NavigationManager.NavigateTo("/orders");
    }
}
